<div class="article title">
    <h3 align="center">Create new category</h3>
</div>

<%= render 'shared/errors', obj: @category %>

<div class='row'>
    <div class='well col-md-6 col-md-offset-3'>
        <%= form_for(@category, :html => {class: "form-horizontal center", role: "form" }) do |element| %>
        <div class='form-group'>
            <div class='control-label col-sm-2'>
                <%= element.label :name %></br>
            </div>
            <div class='col-sm-10'>
                <%= element.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div>
                <%= element.submit class: 'btn btn-primary btn-sm' %>
            </div>
        </div>
        <% end %>
        <div align="center">
        [ <%= link_to "Back to list of articles", articles_path %> ]
        </div>
    </div>
</div>