<div class="article-title">
    <h3 align="center">Log in</h3>
</div>

<div class="well col-md-6 col-md-offset-3">
    <%= form_for(:session, :html => {class: "form-horizontal center", role: "form"}, url: login_path) do |element| %>
        </br>
        <div class='form-group'>
            <div class='control-label col-sm-2'>
                <%= element.label :email %>
            </div>
            <div class='col-sm-10'>
                <%= element.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
            </div>
        </div>
        <div class='form-group'>
            <div class='control-label col-sm-2'>
                <%= element.label :password%></br>
            </div>
            <div class='col-sm-10'>
                <%= element.password_field :password, class: "form-control", autocomplete: "off" %>
            </div>
        </div>
        <div class="form-group">
            <div>
                <%= element.submit "Login", class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
    <% end %>
    <div align="center">
        [ <%= link_to "Back to list of articles", articles_path %> ]
    </div>
</div>
</div>