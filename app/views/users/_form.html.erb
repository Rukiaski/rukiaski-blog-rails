<%= render 'shared/errors', obj: @user %>

<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form" }) do |element| %>
        <div class='form-group'>
            <div class='control-label col-sm-2'>
                <%= element.label :username %></br>
            </div>
            <div class='col-sm-10'>
                <%= element.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
            </div>
        </div>
        <div class='form-group'>
            <div class='control-label col-sm-2'>
                <%= element.label :email %></br>
            </div>
            <div class='col-sm-10'>
                <%= element.email_field :email, class: "form-control", placeholder: "Enter your email" %>
            </div>
        </div>
        <div class='form-group'>
            <div class='control-label col-sm-2'>
                <%= element.label :password %></br>
            </div>
            <div class='col-sm-10'>
                <%= element.password_field :password, class: "form-control", placeholder: "Enter your password" %>
            </div>           
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= element.submit(@user.new_record? ? "Sign up" : "Save all modifications", class: 'btn btn-primary btn-lg') %>
            </div>
        </div>
        <% end %>
        <div align="center">
        [ <%= link_to "Back to list of articles", articles_path %> ]
        </div>
    </div>
</div>

